{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "outDir": "./build",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["src/routes/*", "src/models/*", "./*.ts", "src/route.ts", "src/server.ts", "src/jwtAuth.ts", "src/fetchAmbient.ts", "src/models/Account/*.ts", "src/models/Cocoon/Elevator.ts", "src/models/Cocoon/Air.ts", "src/models/Cocoon/Room.ts", "src/models/Cocoon/Floor.ts", "src/models/Timeline/Timetable.ts", "src/models/Timeline/Event.ts", "src/models/Timeline/Schedule.ts", "src/models/Social/Class.ts", "src/models/Social/ExtraClass.ts", "src/models/Contents/Post.ts"],
  "exclude": ["node_modules", "build"] // コンパイルから除外するファイル
}
