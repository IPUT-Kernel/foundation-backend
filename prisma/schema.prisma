model User {
  id                Int          @id @default(autoincrement())
  name              String       @unique
  email             String       @unique
  auth              Auth
  followers         User[]       @relation("UserFollowers", references: [id])
  followings        User[]       @relation("UserFollowings", references: [id])
  class             Class?       @relation(fields: [classId], references: [id])
  classId           Int?         @unique
  extraClass        ExtraClass[] @relation("User")
  profile           Profile?     @relation(fields: [profileId], references: [id])
  profileId         Int?         @unique
}

model Auth {
  id                Int          @id @default(autoincrement())
  user              User         @relation(fields: [userId], references: [id])
  userId            Int          @unique
  passwordHash      String
  verifiedAt        DateTime?        @default(false)
  confirmToken      String
}

model Profile{
  id                Int          @id @default(autoincrement())
  realNameFirst     String?
  realNameLast      String?
  birthday          DateTime?
  sex               String?
  phone             String?
  motherTongue      String?
  describe          String?
  city              String?
  avatarUrl         String       @default("")
  coverUrl          String       @default("")
}